<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheNewQuotes" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E1E3E4</item>
        <item name="colorPrimaryVariant">#BEBEBE</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorControlNormal">#000</item>
        <item name="android:colorControlNormal">#000</item>
        <!-- Customize your theme here. -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="SquareWithRoundedRaduis" >
        <item name="cornerSize">10%</item>
    </style>

    <style name="QuotePageStyle">
        <item name="cornerSize">2%</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000</item>
    </style>

    <style name="ProgressStyle">
        <item name="colorAccent">@color/black</item>
    </style>

<!--    <style name="darkTest" parent="@style/Theme.AppCompat.DayNight">-->
<!--        <item name="android:forceDarkAllowed">true</item>-->
<!--    </style>-->
</resources>