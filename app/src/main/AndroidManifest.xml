<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reddevx.instaquotes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/AppName"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheNewQuotes">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>

        <activity
            android:name="com.reddevx.instaquotes.ui.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.reddevx.instaquotes.ui.SearchActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.reddevx.instaquotes.ui.NotificationsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.reddevx.instaquotes.ui.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.reddevx.instaquotes.ui.CategoryQuotesActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.reddevx.instaquotes.ui.FeaturedQuotesActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.reddevx.instaquotes.ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>